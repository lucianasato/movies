{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Actor list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Birthdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_actor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{% if entity.birthdate %}{{ entity.birthdate|date('d/m/Y') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_actor_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_actor_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_actor_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
