{% extends '::base_admin.html.twig' %}

{% block body -%}
	<h1 class="page-header">Actors</h1>
	<a class="btn btn-primary" href="{{ path('admin_actor_new') }}">
		New Actor
	</a>

	<a class="" href="{{ path('admin_actor_export') }}">Export</a>
	<table class="records_list table table-striped table-condensed">
		<thead>
			<tr>
				<th>#</th>
				<th>Name</th>
                <th>Photo</th>
                <th>Birthdate</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
		{% for entity in entities %}
			<tr>
				<td><a href="{{ path('admin_actor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
				<td>{{ entity.name }}</td>
                <td><img src="{{ asset( 'uploads/' ~ entity.image.path ) }}" /></td>
                <td>{% if entity.birthdate %}{{ entity.birthdate|date('d/m/Y') }}{% endif %}</td>
				<td>
					<a class="btn btn-default btn-xs btn-info" href="{{ path('admin_actor_edit', { 'id': entity.id }) }}">
					edit</a>
					<a class="btn btn-default btn-xs btn-success" href="{{ path('admin_actor_show', { 'id': entity.id }) }}">show</a>
					<a class="btn btn-default btn-xs btn-danger" href="{{ path('admin_actor_delete', { 'id': entity.id }) }}">delete</a>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
	<div class="registers">
		{{ entities.getTotalItemCount }} registers found
	</div>
	<div class="navigation">
		{{ knp_pagination_render(entities) }}
	</div>
{% endblock %}
