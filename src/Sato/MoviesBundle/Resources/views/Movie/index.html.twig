{% extends '::base_admin.html.twig' %}

{% block body -%}
	<h1 class="page-header">Movies</h1>
	<a class="btn btn-primary" href="{{ path('admin_movie_new') }}">
		New Movie
	</a>
	<a class="" href="{{ path('admin_movie_export') }}">Export</a>
	<table class="records_list table table-striped table-condensed">
		<thead>
			<tr>
				<th>#</th>
				<th>Title</th>
				<th>Description</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
		{% for entity in entities %}
			<tr>
				<td><a href="{{ path('admin_movie_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
				<td>{{ entity.title }}</td>
				<td>{{ entity.description }}</td>
				<td>
				<a class="btn btn-default btn-xs btn-info" href="{{ path('admin_movie_edit', { 'id': entity.id }) }}">
				edit</a>
				<a class="btn btn-default btn-xs btn-success" href="{{ path('admin_movie_show', { 'id': entity.id }) }}">show</a>
				<a class="btn btn-default btn-xs btn-danger" href="{{ path('admin_movie_delete', { 'id': entity.id }) }}">delete</a>
				</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
	<div class="registers">
		{{ entities.getTotalItemCount }} registers found
	</div>
	<div class="navigation">
		{{ knp_pagination_render(entities) }}
	</div>
{% endblock %}
