{% extends '::base.html.twig' %}

{% block body %}
	<div class="blog-header">
		<h1 class="blog-title">Contact</h1>
	</div>
	<div class="row">
		<div class="col-sm-8 blog-main">
			

			{{ form_start(form, {'attr': {'class': 'form-horizontal'} }) }}
				{{ form_errors(form) }}

				<div class="form-group">
					{{ form_label(form.name , 'Name', { 'label_attr' : {'class': 'control-label col-sm-2' }} ) }}
					<div class="col-sm-10">
						{{ form_widget(form.name , {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.email , 'Email', { 'label_attr' : {'class': 'control-label col-sm-2' }} ) }}
					<div class="col-sm-10">
						{{ form_widget(form.email , {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>

				<div class="form-group">
					{{ form_label(form.message , 'Message', { 'label_attr' : {'class': 'control-label col-sm-2' }} ) }}
					<div class="col-sm-10">
						{{ form_widget(form.message , {
							'attr': {
								'class'	: 'form-control', 
								'cols'	: '6' ,
								'rows'	: '6' ,
							}
						}) }}
					</div>
				</div>

				<div class="form-group" style="float:right; padding-right: 14px">
					{{ form_widget(form.save , {'attr': {'class': 'btn btn-primary'}}) }}
				</div>

			{{ form_end(form) }}
		</div><!-- /.blog-main -->

		<div class="col-sm-3 col-sm-offset-1 blog-sidebar">
			<div class="sidebar-module sidebar-module-inset">
				<h4>About</h4>
