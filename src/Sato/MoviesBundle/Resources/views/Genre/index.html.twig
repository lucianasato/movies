{% extends '::base_admin.html.twig' %}

{% block body -%}
	<h1>Genres</h1>

    <div class="btn-actions">
        <a class="btn btn-default" href="{{ path('admin_genre_new') }}"><span class="glyphicon glyphicon-plus-sign"></span> New</a>
    </div>

	<table class="records_list table table-striped table-condensed">
		<thead>
			<tr>
				<th>#</th>
				<th>Name</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
		{% for entity in entities %}
			<tr>
				<td><a href="{{ path('admin_genre_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
				<td>{{ entity.name }}</td>
				<td class="btn-td-actions">
                    <a href="{{ path('admin_genre_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-edit"></span></a>
                    <a href="{{ path('admin_genre_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-zoom-in"></span></a>
                    <a href="{{ path('admin_genre_delete', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-trash"></a>
                </td>
			</tr>
		{% endfor %}
		</tbody>
	</table>
	<div class="registers">
		{{ entities.getTotalItemCount }} registers found
	</div>
	<div class="navigation">
		{{ knp_pagination_render(entities) }}
	</div>
	{% endblock %}
